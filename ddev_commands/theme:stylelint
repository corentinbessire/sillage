#!/bin/bash

## Description: Apply stylelint to the Theme.
## Usage: theme:stylelint <theme-name>
## Example: "ddev theme:stylelint sillage"

if [ -z "$1" ]; then
    echo "Error: Theme name is required"
    echo "Usage: ddev theme:stylelint <theme-name>"
    exit 1
fi

theme_name=$1
shift

if [ ! -d "/var/www/html/web/themes/custom/$theme_name" ]; then
    echo "Error: Theme '$theme_name' not found in web/themes/custom/"
    exit 1
fi
cd "/var/www/html/web/themes/custom/$theme_name" && npm run stylelint
