{#
/**
 * @file
 * Button component template.
 *
 * Available variables:
 * - text: The text to display in the button.
 * - url: The URL the button links to.
 */
#}

{# Process attributes to add component classes #}
{% set classes = [
  'rounded-md', 'bg-primary', 'px-3.5', 'py-2.5', 'text-sm',
  'font-semibold', 'text-white', 'shadow-sm', 'hover:bg-primary-light',
  'focus-visible:outline', 'focus-visible:outline-2',
  'focus-visible:outline-offset-2', 'focus-visible:outline-primary'
] %}
{% set attributes = create_attribute(attributes) %}

<a href="{{ url }}" {{ attributes.addClass(classes) }}>{{ text }}</a>

